                <w lemma="saluus">Saluis</w> <persName type="emperor" ref="#anonymi"><w lemma="dominus"><expan><abbr>dd</abbr><ex>ominis</ex></expan></w> <w lemma="noster"><expan><abbr>nn</abbr><ex>ostris</ex></expan></w></persName> 
